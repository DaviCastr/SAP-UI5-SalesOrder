<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="MessageListDialog"
        title="{i18n>Information}"
    >
        <beginButton>
            <Button id="_IDGenButton3"
                text="{i18n>Close}"
                press="onCloseMessageListDialog"
            />
        </beginButton>
        <content>
            <t:Table
                id="table-messagelist-dialog"
                rows="{messageList>/}"
                visibleRowCount="10"
                threshold="0"
                selectionMode="MultiToggle"
                class="sapUiSmallMargin"
            >
                <t:toolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar2">
                        <Title id="_IDGenTitle1" text="Mensagens" />
                    </OverflowToolbar>
                </t:toolbar>
                <t:columns>
                    <t:Column id="_IDGenColumn7"
                        width="60px"
                        sortProperty="Type"
                        hAlign="Center"
                    >
                        <Label id="_IDGenLabel16" text="{i18n>Type}" />
                        <t:template>
                            <core:Icon id="_IDGenIcon"
                                src="{path: 'messageList>Type', formatter: '.formatter.getIconStatus'}"
                                color="{path: 'messageList>Type', formatter: '.formatter.getColorStatus'}"
                            >
                                <core:layoutData>
                                    <FlexItemData id="_IDGenFlexItemData" growFactor="1" />
                                </core:layoutData>
                            </core:Icon>
                        </t:template>
                    </t:Column>
                    <t:Column id="_IDGenColumn17" sortProperty="Message">
                        <Label id="_IDGenLabel17" text="{i18n>Message}" />
                        <t:template>
                            <Text id="_IDGenText10"
                                text="{messageList>Message}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
    </Dialog>
</core:FragmentDefinition>
